<h2>Edit Category</h2>

<%= render 'form' %>

<h3 class="page-header">
  Images in <%= @category.name %>
</h3>
<div id="edit_images">
  <% if @images.exists? %>
    <%= @images.each_slice(6) do |image| %>
      <div class="row">
        <% image.each do |image| %>
          <div class="col-md-2">
            <%= image_tag image.image_url(:thumb) %>
            <center><%= link_to 'Delete', image_path(image), class: 'delete', method: :delete, data: { confirm: 'Are you sure?' } %></center>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
